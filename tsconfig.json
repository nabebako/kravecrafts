{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "$lib": [
        "./src/lib"
      ],
      "$static": [
        "./src/static"
      ],
      "$lib/*": [
        "./src/lib/*"
      ],
      "$static/*": [
        "./src/static/*"
      ],
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
  ]
}