{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@types/*": [
        "types/*"
      ],
      "@styles/*": [
        "scss/*"
      ],
      "@scripts/*": [
        "ts/*"
      ],
    },
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/components/attatch.tsx",
  ]
}